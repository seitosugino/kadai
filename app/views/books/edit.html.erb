<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <ul>
      <li><%= message %></li>
    </ul>  
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>

  <div>Title</div>
  <%= f.text_field :title %>

  <div>Body</div>
  <%= f.text_area :body %>
  <div></div>
  <%= f.submit 'Update Book' %>

<% end %>

<%= link_to "Show", book_path(@book) %><span> | </span><%= link_to "Back", books_path %>