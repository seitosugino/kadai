<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    
    <% @books.each do |book| %>
    <tbody>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td>
                <%= link_to "Show", book_path(book) %>
            </td>
            <td>
                <%= link_to "Edit", edit_book_path(book) %>
            </td>
            <td>
                <%= link_to "destory", book_path(book), method: :delete %>
            </td>
        </tr>
    </tbody>
    <% end %>
    
</table>

<h2>New Book</h2>


<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>

  <div>Title</div>
  <div>
  <%= f.text_field :title %>
  </div>
  <div>Body</div>
  <div>
  <%= f.text_area :body %>
  </div>
  <div></div>
  <%= f.submit 'Create Book' %>

<% end %>